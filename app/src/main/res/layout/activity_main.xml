<?xml version="1.0" encoding="utf-8"?>

<!-- Base App Layout -->
<LinearLayout xmlns:adroid="http://schemas.android.com/apk'res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:gravity="center_horizontal">

    <!-- App Title -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/app_title"
        android:textColor="#ffffff"
        android:background="#064cd5"
        android:textAlignment="center"
        android:textSize="50dp">
    </TextView>

    <!-- Check Amount Container -->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/check_amount"
            android:textColor="#064cd5"
            android:textSize="20dp">
        </TextView>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/_check_amount"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="25dp">
        </EditText>

    </LinearLayout>

    <!-- Number of People Container -->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/number_of_people"
            android:textColor="#064cd5"
            android:textSize="20dp">
        </TextView>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/_number_of_people"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="25dp">
        </EditText>

    </LinearLayout>

    <!-- Number of People Container -->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/tip_percentage"
            android:textColor="#064cd5"
            android:textSize="20dp">
        </TextView>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/_tip_percentage"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="25dp">
        </EditText>

    </LinearLayout>

    <!-- Calculate Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:text="@string/calculate_button"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:background="#064cd5">
    </Button>

    <!-- Output Area -->
    <GridLayout
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:columnCount="2"
        android:rowCount="2">


        <!-- Inner Box Total Bill -->
        <GridLayout
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:padding="10dp"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/total_bill"
                android:textColor="#064cd5"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/_total_bill"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

        </GridLayout>

        <!-- Inner Box Total Per Person -->
        <GridLayout
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:padding="10dp"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/total_per_person"
                android:textColor="#064cd5"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/_total_per_person"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

        </GridLayout>

        <!-- Inner Box Total Tip -->
        <GridLayout
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:padding="10dp"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/total_tip"
                android:textColor="#064cd5"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/_total_tip"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

        </GridLayout>

        <!-- Inner Box Tip Per Person -->
        <GridLayout
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:padding="10dp"
            android:columnCount="1"
            android:rowCount="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/tip_per_person"
                android:textColor="#064cd5"
                android:textSize="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/_tip_per_person"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1">
            </TextView>

        </GridLayout>

    </GridLayout>

</LinearLayout>
